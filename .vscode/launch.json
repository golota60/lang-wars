  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/server/src/server.ts",
      "preLaunchTask": "npm: build - server",
      "envFile": "${workspaceFolder}/server/.env",
      "outFiles": [
        "${workspaceFolder}/server/build/server.js"
      ]
    }
  ]
}